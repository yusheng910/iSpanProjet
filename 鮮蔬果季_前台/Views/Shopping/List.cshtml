@section Scripts{

    <script src="~/js/jquery-ui.min.js"></script>

    <script>

        //$("#basic").change(function () {
        //    $("#slectForm").submit();
        //    var opt = $("#basic").val;
        //    console.log(opt);
        //});
        @*下拉式選單選時要跳到那個選項*@
        @*$("#basic").find("option[value=@ViewBag.Select]").prop("selected", true);*@
        var selcted = document.querySelector("#basic");
        selcted.addEventListener('change',()=> {
            console.log(selcted.options[selcted.selectedIndex].value)
        })
        //分類查詢
        var categoryselect = $(".categoryselect");
        categoryselect.click( function () {
            let categorySelId = $(this).val();
            if ($(this).val() == 1 || $(this).val() == 6) { }
            else {
                $(".categorySel").val(categorySelId) //設定有塞選過的編號
                let min = (($("#slider-range").find("span")[0].style.left).split("%")[0]) * 10 / 2
                let max = (($("#slider-range").find("span")[1].style.left).split("%")[0]) * 10 / 2
                var str = $(this).text()
                $("#textName").html($.trim(str).split(" ")[0] + "    ")
                $("#textPrice").html("價錢 $" + min + " ~ $" + max)
                $(".categorytrash").html("<button id='trash'><i class='fas fa-trash'></i></button> ")
                let value = $(this).val()
                $('#grid-view').find('.row').load("@Url.Content("~/Shopping/CategoryPartial")/" +value+"?min=" + min + "&max=" + max )
            }
        })
        //價錢查詢
        var priceSelect = $("#PriceSelect");
        priceSelect.click(function () {
            let min = (($("#slider-range").find("span")[0].style.left).split("%")[0]) * 10/2
            let max = (($("#slider-range").find("span")[1].style.left).split("%")[0]) * 10/2
            let categorySelId = $(".categorySel").val();
            console.log(min)
            console.log(max)
            if ($(".categorySel").val() != "") {
                $("#textPrice").html("價錢 $" + min + " ~ $" + max)
                $(".categorytrash").html("<button id='trash'><i class='fas fa-trash'></i></button> ")
            } else {
                //$("#textSel").html("篩選：<span id='textName'> </span> <span id='textPrice'>價錢 $" + min + " ~ $" + max + "</span><span class='categorytrash'></span><input type='hidden' class='categorySel' value=''>")
                $(".categorySel").val(" ") 
                $("#textName").html(" ")
                $("#textPrice").html("價錢 $" + min + " ~ $" + max)
                $(".categorytrash").html("<button id='trash'><i class='fas fa-trash'></i></button> ")
            }
            console.log(categorySelId)
            $('#grid-view').find('.row').load("@Url.Content("~/Shopping/PricePartial")?min=" + min + "&max=" + max + "&categetoryId=" + categorySelId)
        })
        //清空篩選
        var trashBtn = $(".categorytrash");
        trashBtn.click(() => {
            $('#grid-view').find('.row').load("@Url.Content("~/Shopping/AllProductPartial")")
            $("#textName").html("無")
            $("#textPrice").html("")
            $(".categorytrash").html("")
            $(".categorySel").val("")
        })
        //搜尋商品
        async function selProductName() {
            let response = await fetch("@Url.Content("~/Shopping/ProductName")")
            let data = await response.json()

            $("#tags").autocomplete({
                source: data,
                autoFocus: false,
                classes: {
                    "ui-autocomplete": "highlight"//下拉式選單樣式
                }
            });
        }
        selProductName()
        $("#selectProduct").submit(function (e) {
            e.preventDefault();
            let productName = $("#tags").val();
            let categetoryId = $(".categoriesId").val();
            console.log(productName)

            $('#grid-view').find('.row').load("@Url.Content("~/Shopping/ProductSearchjPartial")?prodName=" + productName  + "&categetoryId=" + categetoryId)
        })
        //加入購物車

        $(".addCart").click(function (e) {
            let value = $(this).find(".add").val();
            console.log(value)
            async function AddtoCart() {
                let response = await fetch("@Url.Content("~/Shopping/ListAddToCart/")" + value)
                let data = await response.text()
                console.log(data)
                if (data != 0) {
                    $("#cartNum").html(data)
                    $('#cart-ul').load('@Url.Content("~/Shopping/NavCart")')
                } else {
                    // 創建事件物件
                    var evt = document.createEvent("HTMLEvents");
                    // 初始化
                    evt.initEvent("click", false, false);
                    document.querySelector(".CarttoLogin").dispatchEvent(evt)
                }

            }
            AddtoCart();

        })
        //console.log(selectProduct);
    </script>

}

