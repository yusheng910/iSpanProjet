            content: normal;
        }

        .highlight {
            background: #FFF9E9;
            color: #8B4513;
            border-radius: 0px 0px 10px 10px;
            letter-spacing: 1px;
            font-weight: bolder;
            padding: 5px
        }

        .ui-menu-item .ui-state-active {
            background: #b0b435;
            border-radius: 10px;
            border: 1px solid #b0b435;
        }

