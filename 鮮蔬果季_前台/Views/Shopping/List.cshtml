                            <button type="submit"> <i class="fa fa-search"></i> </button>
                        </form>
                    </div>
                    <div class="filter-sidebar-left">
                        <div class="title-left">
                            <h3>商品分類</h3>
                        </div>
                        @{
                            <div class="list-group list-group-collapse list-group-sm list-group-tree" id="list-group-men" data-children=".sub-men">

                                @*第一層Start*@
                                @{int count1 = 0; int count2 = 50; int count3 = 100;}
                                @foreach (var 分類 in ViewBag.主類別)
                                {

                                    count1++;
                                    string men = "sub-men" + count1;
                                    string groupmen = "list-group-men";
                                    if (分類.FatherCategoryId == null)
                                    {
                                        <div class="list-group-collapse sub-men">
                                            <a class="list-group-item list-group-item-action" href="#@men" data-toggle="collapse" aria-expanded="false" aria-controls="@men" style="position:relative">
                                                @分類.CategoryName
                                            </a>
                                            <div class="collapse" id="@men" data-parent="#@groupmen">
                                                <div class="list-group">
                                                    @foreach (var 次分類 in ViewBag.次類別)
                                                    {
                                                        count2++;
                                                        string men2 = "sub-men" + count2;
                                                        string groupmen2 = "list-group-men2";
                                                        if (次分類.FatherCategoryId == 分類.CategoryId)
                                                        {
                                                            var list = ViewBag.分類明細;
                                                            @foreach (var detail in list)
                                                            {
                                                                if (detail.分類ID == 次分類.CategoryId)
                                                                {
                                                                    <button class="list-group-item list-group-item-action categoryselect" href="#@men2" data-toggle="collapse" aria-expanded="true" aria-controls="@men2" value="@次分類.CategoryId" style="cursor: pointer;" id="categoryselect">
                                                                        @次分類.CategoryName <small class="text-muted">(@detail.總數)</small>
                                                                    </button>
                                                                }
                                                            }

                                                            <div class="collapse" id="@men2" data-parent="#@groupmen2">
                                                                <div class="list-group">
                                                                    @foreach (var 次分類2 in ViewBag.次類別2)
                                                                    {
                                                                        count3++;
                                                                        string men3 = "sub-men" + count3;
                                                                        if (次分類2.FatherCategoryId == 次分類.CategoryId)
                                                                        {
                                                                            var list2 = ViewBag.分類明細;
                                                                            @foreach (var detail in list2)
                                                                            {
                                                                                if (detail.分類ID == 次分類2.CategoryId)
                                                                                {
                                                                                    <button class="list-group-item list-group-item-action categoryselect" href="#@men3" data-toggle="collapse" aria-expanded="true" aria-controls="@men3" value="@次分類2.CategoryId" style="cursor: pointer;" id="categoryselect">
                                                                                        @次分類2.CategoryName <small class="text-muted">(@detail.總數)</small>
                                                                                    </button>
                                                                                }
                                                                            }
