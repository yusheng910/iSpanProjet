
@{
    ViewData["Title"] = "ShopDetail";
}
@section Styles{
    <style>
        .carousel-inner img {
            object-fit: cover;
            width: 400px;
            height: 450px;
        }
        .carousel-indicators img {
            object-fit: cover;
            width: 80px;
            height: 80px;
        }

        .all-title-box {
           /* background: url("../images/test1.jpg") no-repeat center center;*/
            background-size: cover;
        }
        .mr-2 img {
            object-fit: cover;
            width: 80px;
            height: 80px;
        }
        .card{
                width:100%;
        }
        .carousel-indicators{
            background:none;
        }
    </style>
}

<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>商品資訊</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">購物</a></li>
                    <li class="breadcrumb-item active">商品資訊 </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start Shop Detail  -->
<div class="shop-detail-box-main">
    <div class="container">
        <div class="row">
            <div class="col-xl-5 col-lg-5 col-md-6">
                <div id="carousel-example-1" class="single-product-slider carousel slide" data-ride="carousel">
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active"> <img class="d-block w-100" src="~/images/商品照/紅蘿蔔.jpg" alt="First slide"> </div>
                        <div class="carousel-item"> <img class="d-block w-100" src="~/images/商品照/紅蘿蔔2.jpg" alt="Second slide"> </div>
                        <div class="carousel-item"> <img class="d-block w-100" src="~/images/商品照/紅蘿蔔3.jpg" alt="Third slide"> </div>
                    </div>
                    <a class="carousel-control-prev" href="#carousel-example-1" role="button" data-slide="prev">
                        <i class="fa fa-angle-left" aria-hidden="true"></i>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel-example-1" role="button" data-slide="next">
                        <i class="fa fa-angle-right" aria-hidden="true"></i>
                        <span class="sr-only">Next</span>
                    </a>
                    <ol class="carousel-indicators">
                        <li data-target="#carousel-example-1" data-slide-to="0" class="active">
                            <img class="d-block w-100 img-fluid" src="~/images/商品照/紅蘿蔔.jpg" alt="" />
                        </li>
                        <li data-target="#carousel-example-1" data-slide-to="1">
                            <img class="d-block w-100 img-fluid" src="~/images/商品照/紅蘿蔔2.jpg" alt="" />
                        </li>
                        <li data-target="#carousel-example-1" data-slide-to="2">
                            <img class="d-block w-100 img-fluid" src="~/images/商品照/紅蘿蔔3.jpg" alt="" />
                        </li>
                    </ol>
                </div>
            </div>
            <div class="col-xl-7 col-lg-7 col-md-6">
                <div class="single-product-details">
                    <h2>紅蘿蔔 (興農種苗)</h2>
                    <h5> <del>NT$ 80</del> NT$ 65</h5>
                    <p class="available-stock"><span>超過20的庫存/ <a href="#">8 已售出 </a></span><p>
                        <h4>商品描述:</h4>
                    <p>
                        產地鮮採直送到府，濃郁的紅蘿蔔香氣，營養驚人的紅蘿蔔
                    </p>
                    <ul>
                        <li>
                            <div class="form-group quantity-box">
                                <label class="control-label">數量</label>
                                <input class="form-control" value="0" min="0" max="20" type="number">
                            </div>
                        </li>
                    </ul>

                    <div class="price-box-bar">
                        <div class="cart-and-bay-btn">
                            <a class="btn hvr-hover" data-fancybox-close="" href="#">馬上購買</a>
                            <a class="btn hvr-hover" data-fancybox-close="" href="#">加入購物車</a>
                        </div>
                    </div>

                    <div class="add-to-btn">
                        <div class="add-comp">
                            <a class="btn hvr-hover" href="#"><i class="fas fa-heart"></i> 加入我的最愛</a>
                        </div>
                        <div class="share-bar">
                            <a class="btn hvr-hover" href="#"><i class="fab fa-facebook" aria-hidden="true"></i></a>
                            <a class="btn hvr-hover" href="#"><i class="fab fa-google-plus" aria-hidden="true"></i></a>
                            <a class="btn hvr-hover" href="#"><i class="fab fa-whatsapp" aria-hidden="true"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row my-5">
            <div class="card card-outline-secondary my-4">
                <div class="card-header">
                    <h2>商品評價</h2>
                </div>
                <div class="card-body">
                    <div class="media mb-3">
                        <div class="mr-2">
                            <img class="rounded-circle border p-1" src="~/images/img-1.jpg"  alt="Generic placeholder image">
                        </div>
                        <div class="media-body">
                            <p>江凱詳</p>
                            <p><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star"></i></p>
                            
                            <p>商品品質優良，下次有需要會再跟你買！送貨速度良好，服務態度良好。</p>
