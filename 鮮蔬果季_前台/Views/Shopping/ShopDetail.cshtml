@model 鮮蔬果季_前台.ViewModels.ShoppingListViewModel
@{
    ViewData["Title"] = "ShopDetail";
}
@section Styles{
    <style>
        .carousel-inner img {
            object-fit: cover;
            width: 400px;
            height: 450px;
        }

        .carousel-indicators img {
            object-fit: cover;
            width: 80px;
            height: 80px;
        }

        .all-title-box {
            /* background: url("../images/test1.jpg") no-repeat center center;*/
            background-size: cover;
        }

        .mr-2 img {
            object-fit: cover;
            width: 80px;
            height: 80px;
        }

        .card {
            width: 100%;
        }

        .carousel-indicators {
            background: none;
        }

        .price-box-bar a {
            color: #ffffff;
            margin-right: 5px;
        }

        .btn:hover {
            /*color: #ffffff;*/
        }
    </style>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Baloo+Bhaijaan+2&display=swap" rel="stylesheet">
}
@section Scripts{ 
    <script>
    num = parseFloat(@Review.Avgstr);
        if (num > 4 && num < 5)
        {
            $("#addavg").html(`<span><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star-half-alt"></i>  </span>${num}/5`);
        }
        else if (num > 3 && num < 4) {
            $("#addavg").html(`<span><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star-half-alt"></i><i class="far fa-star"></i>  </span>${num}/5`);
        }
    </script>
}
<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>商品資訊</h2>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start Shop Detail  -->
@{
<div class="shop-detail-box-main">
    <div class="container">
        <div class="row">
            <div class="col-xl-5 col-lg-5 col-md-6">
                <div id="carousel-example-1" class="single-product-slider carousel slide" data-ride="carousel">
                    <div class="carousel-inner" role="listbox">
                        @{
                            bool flag = true;
                            foreach (var 照片 in Model.photoBank)
                            {
                                if (flag)
                                {
                                    <div class="carousel-item active"> <img class="d-block w-100" src="~/images/商品照/@照片.PhotoPath" alt=""> </div>
                                    flag = false;
                                }
                                else
                                {
                                    <div class="carousel-item "> <img class="d-block w-100" src="~/images/商品照/@照片.PhotoPath" alt=""> </div>
                                }

                            }
                            @*string url = Context.Request.Query["Name"];
                                <img class="carousel-item" src="http://chart.apis.google.com/chart?cht=qr&chl=@url&chs=150x150" alt="" />*@
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carousel-example-1" role="button" data-slide="prev">
                        <i class="fa fa-angle-left" aria-hidden="true"></i>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel-example-1" role="button" data-slide="next">
                        <i class="fa fa-angle-right" aria-hidden="true"></i>
                        <span class="sr-only">Next</span>
                    </a>
                    <ol class="carousel-indicators">
                        @{
                            int count = 0;
                            bool flag2 = true;
                            foreach (var 照片 in Model.photoBank)
                            {
                                if (flag2)
                                {
                                    <li data-target="#carousel-example-1" data-slide-to="@count" class="active">
                                        <img class="d-block w-100 img-fluid" src="~/images/商品照/@照片.PhotoPath" alt="" />
                                    </li>
                                    count++;
                                    flag2 = false;
                                }
                                else
                                {
                                    <li data-target="#carousel-example-1" data-slide-to="@count">
                                        <img class="d-block w-100 img-fluid" src="~/images/商品照/@照片.PhotoPath" alt="" />
                                    </li>
                                    count++;
                                }
                            }
                        }
                        @*<li data-target="#carousel-example-1" data-slide-to="0" class="active">
                                <img class="d-block w-100 img-fluid" src="~/images/商品照/紅蘿蔔.jpg" alt="" />
                            </li>
                            <li data-target="#carousel-example-1" data-slide-to="1">
                                <img class="d-block w-100 img-fluid" src="~/images/商品照/紅蘿蔔2.jpg" alt="" />
                            </li>
                            <li data-target="#carousel-example-1" data-slide-to="2">
                                <img class="d-block w-100 img-fluid" src="~/images/商品照/紅蘿蔔3.jpg" alt="" />
                            </li>*@
                    </ol>
                </div>
            </div>
            <div class="col-xl-7 col-lg-7 col-md-6">
                <div class="single-product-details">
                    <h2>【@Model.supplier.SupplierName】@Model.product.ProductName </h2>
                    <h5> @*<del>NT$ 80</del>*@ NT$ @Model.product.ProductUnitPrice</h5>
                    <p class="available-stock"><span> 尚餘 @Model.product.ProductUnitsInStock 件  /  <a href="#">@Model.出售量 已售出 @*@avgstar*@ </a></span><p>
                        <h4>商品描述:</h4>
                    <p>
                        @Model.product.ProductDescription
                    </p>
                    <h4>商品規格:</h4>
                    <p>
                        @Model.product.ProductSize
                    </p>
                    <ul>
                        <li>
                            <div class="form-group quantity-box">
                                <label class="control-label">數量</label>
                                <input class="form-control" value="1" min="1" max="20" type="number">
                            </div>
                        </li>
                    </ul>

                    <div class="price-box-bar">
                        <div class="cart-and-bay-btn">
                            <a class="btn hvr-hover" data-fancybox-close="" asp-area="" asp-controller="Shopping" asp-action="Cart">馬上購買</a>
                            <a class="btn hvr-hover" data-fancybox-close="" asp-area="" asp-controller="Shopping" asp-action="DetailAddToCart"asp-route-id="@Model.product.ProductId">加入購物車</a>
                        </div>
                    </div>

                    <div class="add-to-btn">
                        <div class="add-comp">
                            @{
                                if (Model.myFavorite.MyFavoriteId != 0)
                                {
                                    <a class="btn hvr-hover" asp-area="" asp-controller="MyFavorite" asp-action="List"><i class="fas fa-heart" style="color: #FF2D2D"></i> 移除我的最愛</a>
                                }
                                else
                                {
                                    <a class="btn hvr-hover" aasp-area="" asp-controller="Shopping" asp-action="DetailAddMyFavorite" asp-route-id="@Model.product.ProductId"><i class="fas fa-heart"></i> 加入我的最愛</a>
                                }
                            }

                        </div>
                        <div class="share-bar">
                            <a class="btn hvr-hover" href="#"><i class="fab fa-facebook" aria-hidden="true"></i></a>
                            <a class="btn hvr-hover" href="#"><i class="fab fa-google-plus" aria-hidden="true"></i></a>
                            <a class="btn hvr-hover" href="#"><i class="fab fa-whatsapp" aria-hidden="true"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @{
            <div class="row my-5">
                <div class="card card-outline-secondary my-4">
                    <div class="card-header">
                        <h2>商品評價</h2>
                        <span id="addstr"><i></i></span><span id="addavg"></span> <span style="color:gray;font-style:italic">(@Model.review.Count 則評論)</span>
                    </div>
                    <div class="card-body">
                        @*從這邊開始foreach*@
                        @{
                            int count2 = 0;
                            if (Model.review.Count == 0)
                            {
                                <input type="hidden" />
                                <div class="media mb-3">
                                    @*這邊加入文字*@
                                    <div class="mr-2">
                                    </div>
                                    <div class="media-body">
                                        <p style="text-align:center;font-size:20px;"><i class="fas fa-info-circle"></i>此商品尚未有任何評價</p>
                                        <p></p>
                                        <p></p>
                                        <small style="font-family:'Baloo Bhaijaan 2', cursive;" class="text-muted"></small>
                                    </div>
                                </div>
                                <hr>
                            }
                            else
                            {
                                double avgstr = 0;
                                foreach (var item in Model.review)
                                {
                                    avgstr += item.StarRanking;
                                    <input type="hidden" />
                                    <div class="media mb-3">
                                        <div class="mr-2">
                                            <img class="rounded-circle border p-1" src="~/images/MemberPhoto/@Model.Member[count2].MemberPhotoPass" alt="Generic placeholder image">
                                        </div>
                                        <div class="media-body">
                                            <p>@Model.Member[count2].MemberName</p>
                                            @{
                                                int rankstar = item.StarRanking;
                                                if (rankstar == 1)
                                                {
                                                    <p><i class="fas fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i></p>
                                                }
                                                else if (rankstar == 2)
                                                {
                                                    <p><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i></p>
                                                }
                                                else if (rankstar == 3)
                                                {
                                                    <p><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i></p>
                                                }
                                                else if (rankstar == 4)
                                                {
                                                    <p><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star"></i></p>
                                                }
                                                else if (rankstar == 5)
                                                {
                                                    <p><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i></p>
                                                }
                                            }
                                            <p>@item.Comments</p>
                                            @{
                                                string ReviewDate = (item.ReviewDate).ToString("yyyy-MM-dd HH:mm");
                                            }
                                            <small style="font-family:'Baloo Bhaijaan 2', cursive;" class="text-muted">@ReviewDate</small>
                                        </div>
                                    </div>
                                <hr>
                                count2++;
                                }
                                avgstr = avgstr / count2;
                                Review.Avgstr = Math.Round(avgstr,1,MidpointRounding.AwayFromZero);
                            }
                        }
                        @*從這邊結束foreach*@
                    </div>
                </div>
                <hr>
            </div>
        }
    </div>
</div>
}

