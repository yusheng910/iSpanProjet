
@{
    ViewData["Title"] = "Cart";
}

@section Styles{
    <style>
        .order-box h3 {
            font-size: 18px;
        }
    </style>
}

<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>購物車</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">購物</a></li>
                    <li class="breadcrumb-item active">購物車</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start Cart  -->
<div class="cart-box-main">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="table-main table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>商品</th>
                                <th></th>
                                <th>價格</th>
                                <th>數量</th>
                                <th>小計</th>
                                <th>移除商品</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="thumbnail-img">
                                    <a href="#">
                                        <img class="img-fluid" src="~/images/img-pro-01.jpg" alt="" />
                                    </a>
                                </td>
                                <td class="name-pr">
                                    <a href="#">
                                        紅蘿蔔 (全福種苗)
                                    </a>
                                </td>
                                <td class="price-pr">
                                    <p>NT$ 60</p>
                                </td>
                                <td class="quantity-box"><input type="number" size="4" value="1" min="0" step="1" class="c-input-text qty text"></td>
                                <td class="total-pr">
                                    <p>NT$ 60</p>
                                </td>
                                <td class="remove-pr">
                                    <a href="#">
                                        <i class="fas fa-times"></i>
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td class="thumbnail-img">
                                    <a href="#">
                                        <img class="img-fluid" src="~/images/img-pro-02.jpg" alt="" />
                                    </a>
                                </td>
                                <td class="name-pr">
                                    <a href="#">
                                        牛番茄 (興農種苗)
                                    </a>
                                </td>
                                <td class="price-pr">
                                    <p>NT$ 82</p>
                                </td>
                                <td class="quantity-box"><input type="number" size="4" value="1" min="0" step="1" class="c-input-text qty text"></td>
                                <td class="total-pr">
                                    <p>NT$ 82</p>
                                </td>
                                <td class="remove-pr">
                                    <a href="#">
                                        <i class="fas fa-times"></i>
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td class="thumbnail-img">
                                    <a href="#">
                                        <img class="img-fluid" src="~/images/img-pro-03.jpg" alt="" />
                                    </a>
                                </td>
                                <td class="name-pr">
                                    <a href="#">
                                        山藥 (泓興育苗)
                                    </a>
                                </td>
                                <td class="price-pr">
                                    <p>NT$ 200</p>
                                </td>
                                <td class="quantity-box"><input type="number" size="4" value="1" min="0" step="1" class="c-input-text qty text"></td>
                                <td class="total-pr">
                                    <p>NT$ 200</p>
                                </td>
                                <td class="remove-pr">
                                    <a href="#">
                                        <i class="fas fa-times"></i>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row my-5">
            <div class="col-lg-6 col-sm-6">
                <div class="coupon-box">
                    <div class="input-group input-group-sm">
                        <input class="form-control" placeholder="輸入酷碰折扣碼" aria-label="Coupon code" type="text">
                        <div class="input-group-append">
                            <button class="btn btn-theme" type="button">使用酷碰券</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-sm-6">
                <div class="order-box">
                    <div class="title-left" style="padding-top:20px">
                        <h3>您的訂單</h3>
                    </div>
                    <hr class="my-1">
                    <div class="d-flex">
                        <h4>商品金額</h4>
                        <div class="ml-auto font-weight-bold"> NT$ 342 </div>
                    </div>
                    <div class="d-flex">
                        <h4>消費稅</h4>
                        <div class="ml-auto font-weight-bold"> NT$ 5 </div>
                    </div>
                    <div class="d-flex">
                        <h4>運費</h4>
                        <div class="ml-auto font-weight-bold"> NT$ 50 </div>
                    </div>
                    <hr class="my-1">
                    <div class="d-flex">
                        <h4>商品折扣</h4>
                        <div class="ml-auto font-weight-bold"> -NT$ 0 </div>
                    </div>
                    <div class="d-flex">
                        <h4>酷碰折扣</h4>
                        <div class="ml-auto font-weight-bold"> -NT$ 20 </div>
                    </div>
                    <hr>
                    <div class="d-flex gr-total">
                        <h5>應付金額</h5>
                        <div class="ml-auto h5"> $ 377 </div>
                    </div>
                    <hr>
                </div>
            </div>
            <div class="col-12 d-flex shopping-box"><a asp-area="" asp-controller="Shopping" asp-action="Checkout" class="ml-auto btn hvr-hover">前往結帳</a> </div>
        </div>

