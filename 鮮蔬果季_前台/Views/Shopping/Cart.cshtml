@model List<鮮蔬果季_前台.ViewModels.ShoppingListViewModel>
@{
    ViewData["Title"] = "Cart";
}

@section Styles{
    <style>
        .order-box h3 {
            font-size: 18px;
        }

        .img-fluid {
            width: 100px;
            height: 80px;
            object-fit: cover;
        }
    </style>
}

<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>購物車</h2>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start Cart  -->
<div class="cart-box-main">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="table-main table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>商品</th>
                                <th></th>
                                <th>價格</th>
                                <th>數量</th>
                                <th>小計</th>
                                <th>移除商品</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int 商品價乘數量 = 0;
                                int 總價 = 0;
                                int 運費 = 50;
                                int 商品折扣 = 0;
                                int 酷碰折扣 = 0;
                                int 應付金額 = 0;
                                if (Model.Count != 0)
                                {
                                    foreach (var item in Model)
                                    {
                                        商品價乘數量 = item.product.ProductUnitPrice * item.shopCart.UnitsInCart;

                                        <tr>
                                            <td class="thumbnail-img">
                                                <a href="#">
                                                    <img class="img-fluid" src="~/images/商品照/@item.photoforCart.PhotoPath" alt="" />
                                                </a>
                                            </td>
                                            <td class="name-pr">
                                                <a href="#">
                                                    @item.product.ProductName
                                                </a>
                                            </td>
                                            <td class="price-pr">
                                                <p>NT$ @item.product.ProductUnitPrice</p>
                                            </td>
                                            <td class="quantity-box">
                                                <input id="qtyChange" type="number" size="4" value="@item.shopCart.UnitsInCart" min="1" max="15" class="c-input-text qty text qtyChange">
                                                <input type="hidden" class="cartid" value="@item.shopCart.ShoppingCartId"/>                                       
                                            </td>
                                            <td class="total-pr">
                                                <p class="itemPrice">NT$ @商品價乘數量</p>
                                            </td>
                                            <td class="remove-pr">
                                                <a href="#">
                                                    <i class="fas fa-times"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        總價 += 商品價乘數量;
                                        應付金額 = 總價 + 運費 - 商品折扣 - 酷碰折扣;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td>
                                            <h2>購物車內無商品</h2>
                                        </td>
                                        <td class="name-pr">
                                        </td>
                                        <td class="price-pr">
                                        </td>
                                        <td class="quantity-box">
                                        </td>
                                        <td class="total-pr">
                                        </td>
                                        <td class="remove-pr">
                                        </td>
                                    </tr>
                                    運費 = 0;
                                    商品折扣 = 0;
                                    酷碰折扣 = 0;
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row my-5">
            <div class="col-lg-6 col-sm-6">
                <div class="coupon-box">
                    <div class="input-group input-group-sm">
                        <input class="form-control" placeholder="輸入酷碰折扣碼" aria-label="Coupon code" type="text">
                        <div class="input-group-append">
                            <button class="btn btn-theme" type="button">使用酷碰券</button>
                        </div>
                    </div>
                </div>
                <div style="width:140px;height:126px">
                    <span class="badge badge-success">剩餘10張</span>
                    <h3 class="lead">開心100</h3>
                    <p class="text-muted mb-0">Short info about voucher</p>
                    <a href="https://www.totoprayogo.com" target="_blank" class="btn btn-sm btn-outline-danger btn-block">
                        show
                    </a>
                </div>
            </div>
            <div class="col-lg-6 col-sm-6">
                <div class="order-box">
                    <div class="title-left" style="padding-top:20px">
                        <h3>您的訂單</h3>
                    </div>
                    <hr class="my-1">
                    <div class="d-flex">
                        <h4>商品金額</h4>
                        <div class="ml-auto font-weight-bold grandTotal"> NT$ @總價 </div>
                    </div>
                    <div class="d-flex">
                        <h4>運費</h4>
                        <div class="ml-auto font-weight-bold"> NT$ @運費 </div>
                    </div>
                    <hr class="my-1">
                    <div class="d-flex">
                        <h4>商品折扣</h4>
                        <div class="ml-auto font-weight-bold"> -NT$ @商品折扣 </div>
                    </div>
                    <div class="d-flex">
                        <h4>酷碰折扣</h4>
                        <div class="ml-auto font-weight-bold"> -NT$ @酷碰折扣 </div>
                    </div>
                    <hr>
                    <div class="d-flex gr-total">
                        <h5>應付金額</h5>
                        <div class="ml-auto h5"> NT$ @應付金額 </div>
                    </div>
                    <hr>
                </div>
            </div>
            <div class="col-12 d-flex shopping-box">
                <a id="goCheck" asp-area="" asp-controller="Shopping" asp-action="Checkout" class="ml-auto btn hvr-hover">前往結帳</a>
            </div>
        </div>

        <div class="row my-5">
            <div class="col-lg-8 col-sm-12"></div>
            <div class="col-lg-4 col-sm-12">
                @*<div class="order-box">
                        <div class="title-left" style="padding-top:20px">
                            <h3>您的訂單</h3>
                        </div>
                        <hr class="my-1">
                        <div class="d-flex">
                            <h4>商品金額</h4>
                            <div class="ml-auto font-weight-bold"> NT$ 342 </div>
                        </div>
                        <div class="d-flex">
                            <h4>消費稅</h4>
                            <div class="ml-auto font-weight-bold"> NT$ 5 </div>
                        </div>
                        <div class="d-flex">
                            <h4>運費</h4>
                            <div class="ml-auto font-weight-bold"> NT$ 50 </div>
                        </div>
                        <hr class="my-1">
                        <div class="d-flex">
                            <h4>商品折扣</h4>
                            <div class="ml-auto font-weight-bold"> -NT$ 0 </div>
                        </div>
                        <div class="d-flex">
                            <h4>酷碰折扣</h4>
                            <div class="ml-auto font-weight-bold"> -NT$ 20 </div>
                        </div>
                        <hr>
                        <div class="d-flex gr-total">
                            <h5>應付金額</h5>
                            <div class="ml-auto h5"> $ 377 </div>
                        </div>
                        <hr>
                    </div>*@
            <input type="hidden" value="@Model.Count" class="count" />
            </div>
            @*<div class="col-12 d-flex shopping-box"><a asp-area="" asp-controller="Shopping" asp-action="Checkout" class="ml-auto btn hvr-hover">前往結帳</a> </div>*@
        </div>

    </div>
</div>
<!-- End Cart -->
