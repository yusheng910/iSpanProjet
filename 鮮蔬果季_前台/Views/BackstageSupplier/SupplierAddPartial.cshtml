@model 鮮蔬果季_前台.ViewModels.SupplierViewModel
<div class="row">
    <div class="col-md-4">    
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SupplierName" class="control-label"></label>
                <input asp-for="SupplierName" class="form-control"placeholder="輸入供應廠商" />
                <span asp-validation-for="SupplierName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BusinessOwner" class="control-label"></label>
                <input asp-for="BusinessOwner" class="form-control"placeholder="輸入負責人" />
