@model List<鮮蔬果季_前台.ViewModels.MemberViewModel>
@{
    ViewData["Title"] = "Member";
}
<div class="row justify-content-center">
    <div class="col-12">
        <div class="row align-items-center my-4">
            <div class="col">
                <h2 class="h3 mb-0 page-title">會員管理</h2>
            </div>
            <div class="col-auto">
                <button type="button" class="btn btn-secondary"><span class="fe fe-trash fe-12 mr-2"></span>刪除</button>
                <button type="button" class="btn btn-primary"><span class="fe fe-filter fe-12 mr-2"></span>新增</button>
            </div>
        </div>
        <!-- table -->
        <div class="card shadow">
            <div class="card-body">
                <table class="table table-borderless table-hover">
                    <thead>
                        <tr>
                            <th>
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="all2">
                                    <label class="custom-control-label" for="all2"></label>
                                </div>
                            </th>
                            <th><strong>ID</strong></th>
                            <th><strong>頭像</strong></th>
                            <th><strong>會員</strong></th>
                            <th><strong>帳號</strong></th>
                            <th><strong>密碼</strong></th>
                            <th><strong>地址</strong></th>
                            <th><strong>城市</strong></th>
                            <th><strong>電話</strong></th>
                            <th><strong>生日</strong></th>
                            <th><strong>動作</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int count = 0;
                            foreach (var item in Model)
                            {
                                count++;
                                                <tr>
                                                    <td>
                                                        <div class="custom-control custom-checkbox">
                                                            <input type="checkbox" class="custom-control-input" id="@count">
                                                            <label class="custom-control-label" for="@count"></label>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <p class="mb-0 text-muted"><strong>@item.member.MemberId</strong></p>
                                                    </td>
                                                    <td>
                                                        <div class="avatar avatar-sm">
                                                            <img src="~/images/MemberPhoto/@item.member.MemberPhotoPass" alt="..." class="avatar-img rounded-circle">
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <p class="mb-0 text-muted"><strong>@item.member.MemberName</strong></p>
                                                    </td>
                                                    <td>
                                                        <p class="mb-0 text-muted"><strong>@item.member.UserId</strong></p>
                                                    </td>
                                                    <td>
                                                        <p class="mb-0 text-muted"><strong>@item.member.Password</strong></p>
                                                    </td>
                                                    <td>
                                                        <p class="mb-0 text-muted"><strong>@item.member.MemberAddress</strong></p>
                                                    </td>
                                                    <td>
                                                        <small class="mb-0 text-muted"><strong>@item.city</strong></small>
                                                    </td>
                                                    <td>
                                                        <p class="mb-0 text-muted"><a href="#" class="text-muted"><strong>@item.member.Mobile</strong></a></p>
                                                    </td>
                                                    @{
                                                        string date = (item.member.BirthDate).ToString();
                                                        date = date.Split(" ")[0];
                                                        <td class="text-muted"><strong>@date</strong></td>
                                                    }

                                                    <td>
                                                        <button class="btn btn-sm dropdown-toggle more-horizontal" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                            <span class="text-muted sr-only">Action</span>
                                                        </button>
                                                        <div class="dropdown-menu dropdown-menu-right">
                                                            <a class="dropdown-item" href="#">修改</a>
                                                            <a class="dropdown-item" href="#">移除</a>
                                                        </div>
                                                    </td>
                                                </tr>
                            }
                        }




                    </tbody>
                </table>
            </div>
        </div>
        <nav aria-label="Table Paging" class="my-3">
            <ul class="pagination justify-content-end mb-0">
                <li class="page-item"><a class="page-link" href="#">上一頁</a></li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">下一頁</a></li>
            </ul>
        </nav>
    </div> <!-- .col-12 -->
</div> <!-- .row -->
