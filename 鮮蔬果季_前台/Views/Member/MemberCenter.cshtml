
@{
    ViewData["Title"] = "MemberCenter";
}
<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>會員中心</h2>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<div class="contact-box-main">
    <div class="container">
        <div class="row" style="margin-left:100px;">
            <div class="col-lg-8 col-sm-7">
                <div class="contact-form-right">
                    <h2>會員中心</h2>
                    <p>可於此修改會員資料。</p>
                    <form id="contactForm">
                        <div class="row">
                            <div class="col-md-7" >
                                <div class="form-group">
                                    電子郵件：<input type="text" placeholder="您的電子郵件帳號" id="email" class="form-control" value="abc12345@gmail.com" name="name" required data-error="請輸入您的電子郵件">
                                    <div class="help-block with-errors"></div>
                                </div>
                                <div class="form-group">
                                    密碼：<input type="password" class="form-control" id="password" name="name" value="abc12345" placeholder="您的密碼" required data-error="請輸入您的密碼">
                                    <div class="help-block with-errors"></div>
                                </div>
                                <div class="form-group">
                                    姓名：<input type="text" class="form-control" id="name" name="name" value="許銘豪" placeholder="您的姓名" required data-error="請輸入您的姓名">
                                    <div class="help-block with-errors"></div>
                                </div>
                                <div class="form-group" style="border: solid 1px #D0D0D0; padding: 5px; ">
                                    &ensp;您的性別 : <input name="gender" type="radio" checked="checked" required data-error="請選擇您的性別" />男性
                                    <input name="gender" type="radio" required data-error="請選擇您的性別" />女性
                                    <div class="help-block with-errors"></div>
                                </div>
                                <div class="form-group">
                                    生日：<input type="date" class="form-control" id="Birthdate" name="name" value="1996-08-03" data-error="請輸入您的生日">
                                    <div class="help-block with-errors"></div>
                                </div>
                                <div class="form-group">
                                    現居地址：<input type="text" class="form-control" id="Address" name="name" value="台北市大安區信義路三段153號3樓" placeholder="您的現居地址" required data-error="請輸入您的住址">
                                    <div class="help-block with-errors"></div>
                                </div>
                                <div class="form-group">
                                    聯絡電話：<input type="text" class="form-control" id="Phone" name="name" value="0912345678" placeholder="您的連絡電話" required data-error="請輸入您的聯絡電話">
                                    <div class="help-block with-errors"></div>
                                </div>

                                <div class="submit-button text-left">
                                    <button class="btn hvr-hover" id="submit" type="submit">修改資料</button>
                                    <div id="msgSubmit" class="h3 text-center hidden"></div>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div id="photo" style=" margin-left: -200px; margin-top: 85px; padding-bottom: 0px; height: 205px ">
                <p style="position:relative;">
                    <img src="~/images/MemberPhoto/1634013481474.jpg" width="120" height="120" style="left:160px; position:absolute; object-fit:cover; border-radius: 50%;" />
                    <a class="fas fa-camera btn hvr-hover" style="border-radius:50%; left:250px; top:60px; position:absolute; color:white; margin-top:20px; padding:10px;"></a>
                </p>
            </div>
            <div class="col-xl-5 col-lg-5 col-md-6" style="margin-top:250px;  padding-bottom:0px">
                <div id="carousel-example-1" class="single-product-slider carousel slide" data-ride="carousel">
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/images/banner-01.jpg" style="min-width:100px; height: 500px; object-fit: cover" alt="First slide">
                        </div>
                        <div class="carousel-item"> <img class="d-block w-100" src="~/images/banner-02.jpg" style=" height:500px; object-fit:cover" alt="Second slide"> </div>
                        <div class="carousel-item"> <img class="d-block w-100" src="~/images/banner-03.jpg" style="height: 500px; object-fit: cover" alt="Third slide"> </div>
                    </div>
                    <a class="carousel-control-prev" href="#carousel-example-1" role="button" data-slide="prev">
                        <i class="fa fa-angle-left" aria-hidden="true"></i>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel-example-1" role="button" data-slide="next">
                        <i class="fa fa-angle-right" aria-hidden="true"></i>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


