
@{
    ViewData["Title"] = "List";
}

@section Styles{
    <style>
        body {
            background: #dedede;
        }

        .coupon .kanan {
            border-left: 1px dashed #ddd;
            width: 40% !important;
            position: relative;
        }

            .coupon .kanan .info::after, .coupon .kanan .info::before {
                content: '';
                position: absolute;
                width: 20px;
                height: 20px;
                background: #dedede;
                border-radius: 100%;
            }

            .coupon .kanan .info::before {
                top: -10px;
                left: -10px;
            }

            .coupon .kanan .info::after {
                bottom: -10px;
                left: -10px;
            }

        .coupon .time {
            font-size: 1.6rem;
        }
        .date{
            font-size:6px;
        }
        .bg-white{
            height:140px;
        }
        #thtitle{
            text-align:center;
        }
        .p-3 {
            padding: 1.5rem !important;
        }
    </style>
}
