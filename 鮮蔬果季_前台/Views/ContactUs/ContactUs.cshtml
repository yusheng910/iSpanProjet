@*加照片資料夾
*@
@model int
@{
    ViewData["Title"] = "ContactUs";
}
@section Styles{
    <style>

        body {
            margin: 0;
            padding: 0;
            background-color: #ffffff;
            height: 100vh;
        }

        #contact .container #contact-row #contact-column #contact-box {
            margin-top: 6vh;
            margin-bottom: 6vh;
            max-width: 600px;
            height: 800px;
            border: 1px solid #9C9C9C;
            background-color: #EAEAEA;
            border-radius: 10px;
        }

            #contact .container #contact-row #contact-column #contact-box #contact-form {
                padding: 20px;
            }

        #contact .container #contact-row #lcontact-column #contact-box #contact-form #register-link {
            margin-top: -93px;
        }

        
        select {
            width: 225px;
            padding: 8px;
            border: 0 !important;
            background-color: #93c435;
            /* needed */
            -webkit-appearance: none;
            -moz-appearance: none;
            /* SVG background image */
            background-position: calc(100% - 1.3em) center;
            background-repeat: no-repeat;
        }

        .select::-ms-expand {
            display: none;
        }

        textarea {
            width: 450px;
            height: 850px;
            max-width: 450px;
            max-height: 1000px;
            resize: none;
        }
    </style>
}

<!-- Start All Title Box -->
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>聯絡我們</h2>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Contact Start -->
<div id="contact">
    <div class="container">
        <div id="contact-row" class="row justify-content-center align-items-center">
            <div id="contact-column" class="col-md-6">
                <div id="contact-box" class="col-md-12" style="background-color: #FFF9E9;  padding-bottom:150px;">
                    <form id="contact-form" class="form" action="~/ContactUs/Send" method="post">
                        <input type="hidden" value="@Model" name="OrderDetailId"/>
                        <h3 class="text-center" style="color: #8b4513; font-size:36px;font-family: 'Noto Sans TC', sans-serif;">聯絡鮮蔬果季</h3>
                        <h3 class="text-center">請提供簡述您所面臨到的問題，鮮蔬果季很樂意為您服務</h3>

                        <div class="form-group">

                            <select name="FatherFeedbackId" id="feedback1">
                                <option label="=======請選擇======">
                                </option>
                            </select>
                            <div class="help-block with-errors">
                                <ol id="FatherFeedbackIdww" ></ol>
                            </div>
                            <select name="FeedbackId" id="feedback2">
                                <option label="=======請選擇=======">
                                </option>
                            </select>
                            <div class="help-block with-errors">
                                <ol id="FeedbackIdww"></ol>
                            </div>

                        </div>
                        <div style="padding-bottom:3px"></div> @*間格用*@
                        
                        <div class="form-group">

                            <div class="form-floating">
                                <textarea name="FeedbackComment" class="form-control" placeholder="請輸入內容" id="message" style="height: 450px"></textarea>

                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-12" style="background-color: #FFF9E9">
                                <button type="submit" class="btn hvr-hover" >傳送</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->
