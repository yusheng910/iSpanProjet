
@model 鮮蔬果季_前台.ViewModels.BlogDetailListViewModel


<div class="row">
    <div class="col-md-12">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="BlogDetailID" type="hidden" />
        <div class="form-group">
            @*在ViewModel中有設定資料欄位的DisplayName,故此處輸入欄位名稱,會帶入設定的DisplayName的名稱*@
            @*<label asp-for="Supplier.SupplierName" class="control-label"></label>*@


            <div class="form-group mb-3">
                <label asp-for="SupplierName" class="control-label"></label>
                <select asp-for="SupplierName" class="form-control">
                    @foreach (var item in ViewBag.AllSupp)
                    {
                        <option>@item.SupplierName</option>

                    }
                </select>
            </div>


            <div class="form-group mb-3">
                <label for="simpleinput">部落格類別</label>
                <br />
                <input type="radio" value="青農返鄉" name="Label" required checked />
                <label style="padding-right:15px">青農返鄉</label>

                <input type="radio" value="履歷無毒" name="Label" required />
                <label style="padding-right:15px">履歷無毒</label>

                <input type="radio" value="有機天地" name="Label" required />
                <label style="padding-right:15px">有機天地</label>
            </div>



            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control"  id="BlogTitle" />
                <span asp-validation-for="Title" class="text-danger"  ></span>
            </div>


            <div class="form-group">
                <label asp-for="Subtitle" class="control-label"></label>
                <input asp-for="Subtitle" class="form-control"   id="BlogSubtitle" />
                <span asp-validation-for="Subtitle" class="text-danger" ></span>
            </div>



            @*文字編輯器*@
            <div class="form-group">
                <label asp-for="Maintext" class="control-label"></label>

                @*前台觸發這邊的編輯器id (editor)*@
                <div id="editorcreate" class="descript" style="min-height:200px;" name="Maintext">
                </div>
                <input type="hidden" class="Maintext" name="Maintext">
            </div>

            <div class="form-group">
                <label class="control-label">部落格相片</label>
                <div class="col-md-12 photobox" style="border:1px solid lightgray;padding:20px">
                    <div class="imgLoad">
                        @*載入上傳圖片區塊imgClear*@

                        @*<img src="~/images/農友部落格照/@Model.BlogDetail.PhotoPath." style="width:150px;height:100px;object-fit:cover;margin-right:10px;margin-bottom:10px;">
                    <input type="hidden" name="photoList" class="photoHid" value="@Model.BlogDetail.PhotoPath" />*@

                    </div>
                    <div class="input-group mb-3">
                        @*<input type="file" class="selectphoto"/>*@
                        <div class="custom-file">
                            @*透過此處的selectphoto觸發*@
                            <input type="file" multiple class="custom-file-input selectphoto" id="inputGroupFile02" name="photo">
                            <label class="custom-file-label" for="inputGroupFile02" aria-describedby="inputGroupFileAddon02">選擇圖片</label>
                        </div>
                        <div class="input-group-append">
                            <a class="input-group-text imgClear" style="cursor:pointer">清空</a>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>

