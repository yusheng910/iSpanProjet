@model List<鮮蔬果季_前台.ViewModels.NewsletterViewModel>

<table class="table datatables border-dark" id="dataTable-1">
    <thead class="thead-dark">
        <tr>
            <th class="chk">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" name="all" onclick="demo()" id="allcheck">
                    <span style="color:white;">全選</span>
                </div>
            </th>
            <th class="No">序號</th>
            <th class="mname">@Html.DisplayNameFor(model => model.First().MemberName)</th>
            <th class="mgd">@Html.DisplayNameFor(model => model.First().Gender)</th>
            <th class="memail">@Html.DisplayNameFor(model => model.First().UserId)</th>
            <th class="mcost">近 @ViewBag.YY 年有消費</th>
        </tr>
    </thead>
    <tbody class="memlist">
        @{ int count = 0;
            foreach (var item in Model)
            {
                if (@item.是否有消費 == 1)
                {
                    count++;
                    <tr>
                        <td>
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="checknum" name="choice" onclick="setAll()" value="@item.UserId">
                            </div>
                        </td>
                        <td>@count</td>
                        <td>@item.MemberName</td>
                        <td>@item.Gender</td>
                        <td>@item.UserId</td>
                        @{
                            if (item.是否有消費 == 1)
                            {
                                <td>
                                    <i style="padding-left:25%" class="fe fe-16 fe-check"><span class="sr-only"></span></i>
                                </td>
                            }
                            else
                            {
                                <td></td>
                            }
                        }
                    </tr>

                }

            }
        }
    </tbody>
</table>
<div class="modal-footer">
    <input type="submit" value="確定" class="btn btn-primary btnSave btnAddmem" data-dismiss="modal" />
    <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
</div>