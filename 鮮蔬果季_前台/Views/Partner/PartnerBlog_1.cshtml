@*@model IEnumerable<鮮蔬果季_前台.Models.Supplier>*@
@model 鮮蔬果季_前台.ViewModels.BlogDetailListViewModel
@{
    ViewData["Title"] = "PartnerBlog_1";
}


<link rel="stylesheet" href="~/assets/css/main.css">

@section Styles{
    <style>
        /*===========更改置頂圖片樣式(獨立)=============================*/
        .all-title-box_Partner {
            background: url("../images/a.jpg") no-repeat;
            background-size: cover;
            text-align: center;
            /*            background-attachment: fixed;*/
            padding: 70px 0px;
            position: relative;
        }

            .all-title-box_Partner::before {
                background: rgba(0,0,0,0.4);
                content: "";
                position: absolute;
                z-index: 0;
                width: 100%;
                height: 100%;
                left: 0px;
                top: 0px;
            }

            .all-title-box_Partner h2 {
                font-size: 28px;
                font-weight: 700;
                color: #ffffff;
                float: left;
                padding: 10px 0px;
            }

        .ImgSize {
            width: 730px;
            height: 450px;
            object-fit: cover;
            border-radius: 5px
        }
    </style>
}


<!-- Start All Title Box -->
<div class="clickmsgbox"></div>
<div class="all-title-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>農友部落格</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">首頁</a></li>
                    <li class="breadcrumb-item active">農友部落格</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<div style="padding-bottom:50px"></div>   @*間格用*@
<!-- single article section -->
<div class="mt-150 mb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="single-article-section">

                    <div class="single-article-text">
                        <div></div>   @*圖片,寫在CSS內*@

                                <img class="ImgSize" src="~/images/農友部落格照/@Model.BlogDetail.PhotoPath ">

                                <p class="blog-meta" style="padding: 5px  0px; font-size: larger ">
                                    <span class="author"><i class="fas fa-user"></i> @Model.Supplier.City.CityName </span>
                                    <span class="author"><i class="fas fa-user"></i>  @Model.SupplierName</span>
                                    <span class="date"><i class="fas fa-calendar"></i> 發布日期 :  @ViewBag.活動日期 </span>
                                </p>
                                <h2> @Model.BlogDetail.Title</h2>
                                <div>
                                    <p style="font-size:medium">@Html.Raw(Model.BlogDetail.Maintext)</p>
                                </div>

                                <div style="padding-top:30px">
                                    <h2>農場位置</h2>
                                </div>
                                <iframe frameborder="0" width="730" height="450" src="https://www.google.com/maps?q=@ViewBag.農場地址&amp;hl=zh-TW&amp;z=16&amp;m=h&amp;output=embed"></iframe>
                                @*googelmpa參數可詳 https://jax-work-archive.blogspot.com/2011/07/google-maps.html  *@

                    </div>



                    @*留言板待補*@
                    <br />
                    <!--<div class="comment-template">
                        <h4>留言板</h4>-->
