@model IEnumerable<鮮蔬果季_前台.Models.Supplier>

@{
    ViewData["Title"] = "PartnerBlog";
}

<link rel="stylesheet" href="~/assets/css/main.css">

@section Styles{
    <style>
        /*===========更改置頂圖片樣式(獨立)=============================*/
        .all-title-box_Partner {
            background: url("../images/a.jpg") no-repeat center center;
            background-size: cover;
            text-align: center;
            /*            background-attachment: fixed;*/
            padding: 70px 0px;
            position: relative;
        }

        @*頂圖*@ .all-title-box_Partner::before {
            background: rgba(0,0,0,0.4);
            content: "";
            position: absolute;
            z-index: 0;
            width: 100%;
            height: 100%;
            left: 0px;
            top: 0px;
        }

        @*頂圖標題*@ .all-title-box_Partner h2 {
            font-size: 28px;
            font-weight: 700;
            color: #ffffff;
            float: left;
            padding: 10px 0px;
        }

            .blogSize{
                object-fit:cover;
                width: 350px;
                height:420px;

            }

        .blogNewsSize {
            object-fit: cover;
            width: 350px;
            height: 200px
        }
        @*限制行數,並隱藏*@
        p {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }

    </style>
}

<!-- Start All Title Box===================================================== -->
<div class="all-title-box_Partner">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>合作農友</h2>
                @*<ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">ABOUT US</li>
                    </ul>*@
            </div>
        </div>
    </div>
</div>
<div style="padding-bottom:50px"></div>   @*間格用*@

<!-- latest news -->


<div>
    <div class="latest-news mt-150 mb-150">
        <div class="container">
            <div class="row">
                @{foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-6 blogSize">
                            <div class="single-latest-news">
                                <a href="single-news.html">
                                    <div class="latest-news-bg news-bg-1"></div>
                                </a>
                                <div class="news-text-box blogNewsSize">
                                    <h3>
                                        @Html.DisplayFor(modelitem => item.SupplierName)
                                        <a href="single-news.html"></a>
                                    </h3>
                                    <p class="blog-meta">
                                        <span class="author"><i class="fas fa-user"></i> 村長 </span>
                                        <span class="date"><i class="fas fa-calendar"></i> 2021-12-03 </span>
                                    </p>
                                    <p class="excerpt">@Html.DisplayFor(modelitem => item.SupplierProfile)</p>
                                    @*<a class="read-more-btn" asp-area="" asp-controller="Partner" asp-action="PartnerBlog_1">read more <i class="fas fa-angle-right"></i></a>*@
                                    
                                    <h5 class="read-more-btn">
                                        @Html.ActionLink("閱讀更多>", "PartnerBlog_1", new { id = item.SupplierId })         @*回傳SupplierId 成為controller中的接收*@
                                    </h5>

                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="pagination-wrap">
                    <ul>
                        <li>
                            <a href="#">Prev</a>
                        </li>
                        <li>
                            <a class="active" href="#">1</a>
                        </li>
                        <li>
                            <a href="#">2</a>
                        </li>
                        <li>
                            <a href="#">3</a>
                        </li>
                        <li>
                            <a href="#">Next</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div style="padding-bottom:50px"></div> @*間格用*@
