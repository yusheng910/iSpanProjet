                float: left;
                padding: 10px 0px;
            }
        .carousel-inner img {        @*控制大圖尺寸*@
            object-fit: cover;
            width: 400px;
            height: 500px;
        }

        .SignUpText {
            font-size: large;
            font-family: Microsoft JhengHei
        }

        @*正黑體*@
        span {
            font-family: Microsoft JhengHei
