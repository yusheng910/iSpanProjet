@section Styles{

    <style>
        /*===========更改置頂圖片樣式(獨立)=============================*/
        .all-title-box_Partner {
            background: url("../images/a.jpg") no-repeat center center;
            background-size: cover;
            text-align: center;
            /*            background-attachment: fixed;*/
            padding: 70px 0px;
            position: relative;
        }
            .all-title-box_Partner::before {
                background: rgba(0,0,0,0.4);
                content: "";
                position: absolute;
                z-index: 0;
                width: 100%;
                height: 100%;
                left: 0px;
                top: 0px;
            }
            .all-title-box_Partner h2 {
                font-size: 28px;
                font-weight: 700;
