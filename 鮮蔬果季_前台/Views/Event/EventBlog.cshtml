@model List<鮮蔬果季_前台.ViewModels.EventListViewModel>

@{
    ViewData["Title"] = "EventBlog";
}
<!--<link rel="stylesheet" href="css/style.css">-->
<!-- Responsive CSS -->
<!--<link rel="stylesheet" href="css/responsive.css">-->
<!-- Custom CSS -->
<!--<link rel="stylesheet" href="css/custom.css">-->


@section Styles{
    <style>
            /*===========更改置頂圖片樣式(獨立)=============================*/
            .all-title-box_Partner {
                background: url("../images/a.jpg") no-repeat center center;
                background-size: cover;
                text-align: center;
                /*            background-attachment: fixed;*/
                padding: 70px 0px;
                position: relative;
            }
            @*頂圖*@
                .all-title-box_Partner::before {
                    background: rgba(0,0,0,0.4);
                    content: "";
                    position: absolute;
                    z-index: 0;
                    width: 100%;
                    height: 100%;
                    left: 0px;
                    top: 0px;
                }
                @*頂圖標題*@
                .all-title-box_Partner h2 {
                    font-size: 28px;
                    font-weight: 700;
                    color: #ffffff;
                    float: left;
                    padding: 10px 0px;
                }

            .carousel-inner img {
                @*控制大圖尺寸*@ object-fit: cover;
                width: 500px;
                height: 300px;
                border: 2px solid;
                @*圖片圓角*@ border-radius:10px;
                background-color: #eee;
            }
            @*活動box外框*@
        .row.art {
            padding-top: 50px;
            border-radius: 10px;
            background-color: #FFF9E9;
        }

            #eventbox {
            padding-top:20px
            }

        @*限制行數,並隱藏*@ p {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }

    </style>
}

<!-- Start All Title Box===================================================== -->
<div class="all-title-box_Partner">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>農友活動</h2>
                @*<ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">ABOUT US</li>
                    </ul>*@
            </div>
        </div>
    </div>
</div>

@*================================================活動========================================*@
<div id="eventbox">
    <div class="container">
        @{
            //int 活動原價 = 0;

            foreach (var item in Model)
            {
                //活動原價 += item.Event.EventPrice.Value;
                <div class="row art">
                    <div class="col-xl-5 col-lg-5 col-md-6">
                        <div id="carousel-example-1" class="single-product-slider carousel slide" data-ride="carousel">
                            <div class="carousel-inner" role="listbox">
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="~/images/EventImg/活動1-1.jpg" alt="First slide">

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-7 col-lg-7 col-md-6">
                        <div class="single-product-details">
                            <h2>@Html.DisplayFor(modelitem => item.Event.EventName)</h2>  @*活動項目標題*@
                            <h5>
                                <del>   @Html.DisplayFor(modelitem => item.Event.EventPrice.Value) </del>  @*原價*1.2  目前寫不出來*@
                                @Html.DisplayFor(modelitem =>item.Event.EventPrice)  / 人
                            </h5>
                            <p class="available-stock">
                                <span> 新北市 , 金山縣 , 現場收費 <a href="#"></a></span>
                            <p>
                                <h4>適合攜家帶眷同樂樂 </h4>  @*放主標題,待資料庫新增欄位*@
                            <p>
                                    @Html.DisplayFor(modelitem=>item.Event.EventDescription)
                            </p>
                            <div class="price-box-bar">
                                <div class="cart-and-bay-btn">
                                    <button type="button" class="btn btn-success"  style="margin-top :20px"> 
                                    @Html.ActionLink("我要報名>", "EventSignUp_1", new { id = item.Event.EventId})  </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div style="padding-bottom:20px"></div> @*間格用*@
            }
        }
    </div>
</div>


